---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel" data-theme:tennis>
  <!-- Herosection -->
  <section class="hero h-screen w-full relative">
    <div class="relative w-screen h-screen">
      <img src="/public/herosection.jpg" alt="Full Screen Image" class="object-cover w-full h-full" />
      <div class="absolute inset-0 flex flex-col items-center justify-start pt-20 gap-4">
        <h2 class="text-primary-content text-3xl font-bold drop-shadow-lg">Bliv en del af fællesskabet</h2>
        <h2 class="text-primary-conten text-3xl font-bold drop-shadow-lg">Tennis for alle</h2>
        <div class="flex gap-4">
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer">Book Tennis bane</button>
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer">Book Padel bane</button>
        </div>
      </div>
    </div>
  </section>
  <!-- Prisliste -->
  <h2>Priser</h2>
  <p>KONTINGENT 2025 <br />Kontingent betales inden 28.februar 2025 og dækker 2025-sæsonen (1.januar – 31.december 2025).</p>
  <h4>KATEGORI ALDER KONTIGENT STARTGEBYR RETTIGHEDER</h4>
  <section class="max-w-xl mx-auto grid grid-cols-1 md:grid-cols-2 grid-rows-4 md:grid-rows-2 gap-4 my-8">
    <div class="w-full h-48 md:h-56 overflow-hidden border-30 border-amber-300 shadow-sm">
      <!-- 50 felter (10x5) -->

      <div class="bg-gray-200 p-4">Senior - fuldtidsspiller</div>
      <div class="bg-gray-200 p-4">Senior - fuldtidsspiller</div>
      <div class="bg-gray-200 p-4">3</div>
      <div class="bg-gray-200 p-4">4</div>
      <div class="bg-gray-200 p-4">5</div>

      <div class="bg-gray-200 p-4">6</div>
      <div class="bg-gray-200 p-4">7</div>
      <div class="bg-gray-200 p-4">8</div>
      <div class="bg-gray-200 p-4">9</div>
      <div class="bg-gray-200 p-4">10</div>

      <!-- ... fortsæt indtil 50 (eller kopier linjerne) -->
    </div>
  </section>

