---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Accordionpriser from "../components/Accordionpriser.astro";
import Accordiontennissportensdag from "../components/Accordiontennissportensdag.astro";
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,700;1,700&display=swap" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet" />

<MainLayout title="Titel" data-theme:tennis>
  <!-- Herosection -->
  <section class="hero h-screen w-full relative">
    <div class="relative w-screen h-screen">
      <img src="/herosection.jpg" alt="Full Screen Image" class="object-cover w-full h-full" />
      <div class="absolute inset-0 flex flex-col items-center justify-start pt-20 gap-4">
        <h2 class="text-primary-content text-3xl font-bold drop-shadow-lg anton-regular">Bliv en del af fællesskabet</h2>
        <h2 class="text-primary-conten text-3xl font-bold drop-shadow-lg anton-regular">Tennis for alle</h2>
        <div class="flex gap-4">
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer montserrat-700 font-bold">Book Tennis bane</button>
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer montserrat-700 font-bold">Book Padel bane</button>
        </div>
      </div>
      <div class="absolute top-40 right-0 md:w-1/2" id="herovideo">
        <video width="1080" height="960" autoplay muted loop class="rounded-[30px] border-primary-content">
          <source src="pierre-falcke-video-kopi.mp4" type="video/mp4" />
        </video>
      </div>
    </div>
  </section>
  <!-- Prisliste -->
  <section class="gap-4 bg-base-300/40">
    <h2 class="montserrat-700 text-2xl md:text-3xl font-bold text-center pb-10 pt-40">Priser</h2>
    <p class="text-primary-content leading-relaxed arial text-center pb-10">KONTINGENT 2025 <br />Kontingent betales inden 28.februar 2025 og dækker 2025-sæsonen (1.januar – 31.december 2025).</p>
    <h4 class="text-center montserrat-700 font-extralight text-2xl" style="word-spacing: 6rem;">KATEGORI ALDER KONTIGENT STARTGEBYR RETTIGHEDER</h4>

    <section class="my-8">
      <div class="grid grid-rows-10 grid-cols-5 gap-0 p-0 bg-base-100 rounded-[30px] max-w-5xl mx-auto border border-primary-content">
        <!-- Generate 10 rows × 5 columns = 50 cells -->
        <!-- You can just repeat this block 50 times -->
        <p class="text-center m-0 text-primary-content leading-relaxed arial">Senior - fuldtidsspiller</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">26-99 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr 1225,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr 150,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">Hele "døgnet"</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial">Senior - Dagspiller</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">26 - 99 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">Indtil kl. 15.00 alle dage.</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 885,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 150,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial">Ungsenior - Fuldtidsspiller</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">19 - 25 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">Hele “døgnet”</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 975,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 100,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial">Ungsenior - Dagspiller</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">19 - 25 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">Indtil kl. 15.00 alle dage.</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 780,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 100,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial">Junior (*)</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">0 - 12 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">Hele “døgnet”</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 650,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 50,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial">Junior (*)</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">13 - 18 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">Hele “døgnet”</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 670,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 50,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial">Passiv</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">-</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">F.eks. bortrejst 1-2 sæsoner</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 125,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">-</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial">Indendørs medlemskab</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">-</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial"></p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">kr. 200,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial">-</p>

        <div class="col-span-5 border-t border-base-content"></div>
        <!-- ... repeat until Cell 50 ... -->
      </div>
      <Accordionpriser />
    </section>

    <!-- SOME -->
    <section class="w-screen h-100 bg-base-400/60 flex items-center justify-center rounded-lg border border-primary-content">
      <div class="relative w-full h-full overflow-hidden group rounded-[30px] flex flex-col items-center justify-center gap-8 p-8">
        <h2 class="montserrat-700 text-2xl md:text-3xl font-bold">Følg den daglige opdatering her!</h2>

        <div class="flex flex-row h-50 bg-base-100 p-20 rounded-lg border border-primary-content space-x-30">
          <img src="/Facebook.png" alt="SOME" class="w-12 h-12" />
          <img src="/Instagram.png" alt="SOME" class="w-12 h-12" />
          <img src="/twitter.png" alt="SOME" class="w-12 h-12" />
          <img src="/youtube.png" alt="SOME" class="w-12 h-12" />
        </div>
      </div>
    </section>

    <!-- Holdinformation: 2 rows x 5 columns grid -->
    <section class="max-w-5xl mx-auto grid grid-cols-5 grid-rows-2 gap-4 my-8 bg-base-300/60">
      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/Ladiesinde.png" alt="Ladies" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/u25inde.png" alt="U25" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>

      <div class="relative w-full h-48 overflow-hidden group rounded-[30px]">
        <img src="/vokseinde.png" alt="Voksne" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-[#981b00] opacity-0 group-hover:opacity-40 transition duration-300 rounded-[30px]"></div>
      </div>
    </section>
    <!-- Nyheder -->
    <section class="relative h-64 md:h-96 w-full bg-cover bg-center bg-no-repeat overflow-hidden border border-primary-content rounded-lg pt-15" style="background-image: url('/public/tennisbanebg.jpg')">
      <div class="absolute inset-0"></div>
      <div class="relative z-10 max-w-4xl mx-auto p-8 text-center text-primary-content">
        <h2 class="mb-4 montserrat-700 text-2xl md:text-3xl font-bold">Nyheder</h2>
        <p class="mb-6 leading-relaxed arial">Seneste nyt fra klubben — hold dig opdateret.</p>
        <a href="/nyheder">
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer leading-relaxed montserrat font-bold">Læs mere nyheder</button>
        </a>
      </div>
    </section>
    <!-- Tennissportens dag -->
   
    <Accordiontennissportensdag />
    <!-- Vinterens tilbud -->
    <section class="relative h-64 md:h-96 w-full bg-cover bg-center bg-no-repeat overflow-hidden border border-primary-content rounded-lg pt-15" style="background-image: url('/public/tennisbanebg.jpg')">
      <div class="absolute inset-0"></div>
      <div class="relative z-10 max-w-4xl mx-auto p-8 text-center text-primary-content">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 montserrat-700">Vinterens tilbud</h2>
        <p class="mb-6 text-primary-content leading-relaxed arial">Tag et kig på vores omfangsrige folder</p>
        <a href="https://issuu.com/kfumtennisklub/docs/tr_nings_og_aktivitetskatalog_for_f_rste_termin_20">
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer leading-relaxed montserrat font-bold">Læs mere om tilbuddet</button>
        </a>
      </div>
    </section>
  </section>
</MainLayout>
