---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Accordionpriser from "../components/Accordionpriser.astro";
import Accordiontennissportensdag from "../components/Accordiontennissportensdag.astro";
import Holdoversigt from "../components/Holdoversigt.astro";
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,700;1,700&display=swap" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet" />

<MainLayout title="Titel" data-theme:tennis>
  <!-- Herosection -->
  <section class="hero w-full relative h-64 md:h-screen">
    <div class="relative w-full h-full">
      <img src="/herosection.jpg" alt="Full Screen Image" class="object-cover w-full h-full" />

      <div class="absolute inset-0 flex flex-col items-center justify-start pt-20 gap-4">
        <!-- Top centered heading on desktop, full centered on mobile -->
        <h2 class="text-primary-content
      !text-4xl md:!text-8xl
      font-bold drop-shadow-lg anton-regular
      text-center
      md:self-start md:pl-20">Bliv en del af fællesskabet</h2>

        <!-- Under it, centered on mobile, left on desktop -->
        <h2 class="text-primary-content
      !text-4xl md:!text-8xl
      font-bold drop-shadow-lg anton-regular
      text-center
      md:self-start md:pl-20">Tennis for alle</h2>

        <!-- Buttons: closer on mobile, same on desktop -->
        <div class="flex gap-10 mt-4 <!-- MOBILE spacing -->
      md:gap-50 md:mt-65 <!-- DESKTOP spacing -->">
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer montserrat-700 font-bold"> Book Tennis bane </button>
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer montserrat-700 font-bold"> Book Padel bane </button>
        </div>
      </div>
    </div>

    <div class="hidden md:block absolute top-50 right-20 md:w-2/5" id="herovideo">
      <video width="1080" height="960" autoplay muted loop class="rounded-[30px] border-primary-content">
        <source src="pierre-falcke-video-kopi.mp4" type="video/mp4" />
      </video>
    </div>
  </section>
  <!-- Prisliste -->
  <section class="gap-4 bg-base-300/40">
    <h2 class="montserrat-700 text-2xl md:text-3xl font-bold text-center pb-10 pt-40">Priser</h2>
    <p class="text-primary-content leading-relaxed arial text-center pb-10">KONTINGENT 2025 <br />Kontingent betales inden 28.februar 2025 og dækker 2025-sæsonen (1.januar – 31.december 2025).</p>
    <h4 class="text-center montserrat-700 font-extralight text-sm md:text-2xl responsive-word-spacing">KATEGORI ALDER KONTIGENT STARTGEBYR RETTIGHEDER</h4>

    <section class="my-8">
      <div class="grid grid-rows-10 grid-cols-5 gap-0 p-0 bg-base-100 rounded-[30px] max-w-5xl mx-auto border border-primary-content">
        <!-- Generate 10 rows × 5 columns = 50 cells -->
        <!-- You can just repeat this block 50 times -->
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Senior - fuldtidsspiller</p>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">26-99 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr 1225,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr 150,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Hele "døgnet"</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Senior - Dagspiller</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">26 - 99 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Indtil kl. 15.00 alle dage.</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 885,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 150,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Ungsenior - Fuldtidsspiller</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">19 - 25 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Hele “døgnet”</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 975,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 100,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Ungsenior - Dagspiller</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">19 - 25 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Indtil kl. 15.00 alle dage.</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 780,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 100,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Junior (*)</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">0 - 12 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Hele “døgnet”</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 650,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 50,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Junior (*)</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">13 - 18 år</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Hele “døgnet”</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 670,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 50,00</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Passiv</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">-</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">F.eks. bortrejst 1-2 sæsoner</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 125,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">-</p>

        <div class="col-span-5 border-t border-base-content"></div>

        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">Indendørs medlemskab</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">-</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm"></p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">kr. 200,00</p>
        <p class="text-center m-0 text-primary-content leading-relaxed arial text-xs md:text-sm">-</p>

        <!-- ... repeat until Cell 50 ... -->
      </div>
      <Accordionpriser />
    </section>

    <!-- SOME -->
    <section class="w-screen bg-base-400/60 flex flex-col items-center justify-center rounded-lg border border-primary-content py-10 md:py-20">
      <h2 class="montserrat-700 text-2xl md:text-3xl font-bold text-center pb-6 md:pb-10">Følg den daglige opdatering her!</h2>

      <div class="flex flex-row bg-base-100 p-4 md:p-12 rounded-lg border border-primary-content justify-center space-x-6 md:space-x-10">
        <a href="https://www.facebook.com/KFUMtennis" target="_blank" rel="noopener noreferrer">
          <img src="/Facebook.png" alt="Facebook" class="w-6 h-6 md:w-12 md:h-12" />
        </a>

        <a href="https://www.instagram.com/KFUMTENNIS/" target="_blank" rel="noopener noreferrer">
          <img src="/Instagram.png" alt="Instagram" class="w-6 h-6 md:w-12 md:h-12" />
        </a>

        <a href="https://x.com/kfumtenniskbh" target="_blank" rel="noopener noreferrer">
          <img src="/twitter.png" alt="Twitter" class="w-6 h-6 md:w-12 md:h-12" />
        </a>

        <a href="https://www.youtube.com/channel/UCkWsnhJvu7A0S11zxhXHGZg" target="_blank" rel="noopener noreferrer">
          <img src="/youtube.png" alt="YouTube" class="w-6 h-6 md:w-12 md:h-12" />
        </a>
      </div>
    </section>

    <!-- Holdinformation: 2 rows x 5 columns grid -->
    <h2 class="montserrat-700 text-2xl md:text-3xl font-bold text-center pt-15">Hold-information</h2>
    <Holdoversigt/>

    <!-- Nyheder -->
    <section class="relative h-64 md:h-96 w-full bg-cover bg-center bg-no-repeat overflow-hidden border border-primary-content rounded-lg pt-15" style="background-image: url('/public/tennisbanebg.jpg')">
      <div class="absolute inset-0"></div>
      <div class="relative z-10 max-w-4xl mx-auto p-8 text-center text-primary-content">
        <h2 class="mb-4 montserrat-700 text-2xl md:text-3xl font-bold">Nyheder</h2>
        <p class="mb-6 leading-relaxed arial">Seneste nyt fra klubben — hold dig opdateret.</p>
        <a href="/nyheder">
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer leading-relaxed montserrat font-bold">Læs mere nyheder</button>
        </a>
      </div>
    </section>
    <!-- Tennissportens dag -->

    <Accordiontennissportensdag />
    <!-- Vinterens tilbud -->
    <section class="relative h-64 md:h-96 w-full bg-cover bg-center bg-no-repeat overflow-hidden border border-primary-content rounded-lg pt-15" style="background-image: url('/public/tennisbanebg.jpg')">
      <div class="absolute inset-0"></div>
      <div class="relative z-10 max-w-4xl mx-auto p-8 text-center text-primary-content">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 montserrat-700">Vinterens tilbud</h2>
        <p class="mb-6 text-primary-content leading-relaxed arial">Tag et kig på vores omfangsrige folder</p>
        <a href="https://issuu.com/kfumtennisklub/docs/tr_nings_og_aktivitetskatalog_for_f_rste_termin_20">
          <button class="px-8 py-4 bg-info text-primary-content border-0 rounded-tl-[300px] rounded-br-[300px] cursor-pointer leading-relaxed montserrat font-bold">Læs mere om tilbuddet</button>
        </a>
      </div>
    </section>
  </section>
</MainLayout>

<style>
  .responsive-word-spacing {
    word-spacing: 1rem; /* mobile spacing */
  }

  @media (min-width: 768px) {
    .responsive-word-spacing {
      word-spacing: 4rem; /* desktop spacing */
    }
  }
</style>
