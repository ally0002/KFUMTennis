<style>
    .site-footer {
        background: #0f1724;
        color: #e6eef8;
        padding: 2rem 1rem;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    .footer-inner {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        align-items: flex-start;
    }

    .footer-col {
        flex: 1 1 220px;
        min-width: 200px;
    }

    .footer-logo {
        width: 120px;
        height: auto;
        display: block;
        margin-bottom: 0.5rem;
    }

    .footer-col h4 {
        margin: 0 0 0.5rem 0;
        font-size: 1.05rem;
    }

    .footer-col p,
    .footer-col address,
    .footer-col ul {
        margin: 0 0 0.75rem 0;
        line-height: 1.4;
    }

    .footer-col ul {
        list-style: none;
        padding: 0;
    }

    .footer-col a {
        color: #bfe3ff;
        text-decoration: none;
    }

    .footer-col a:hover {
        text-decoration: underline;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255,255,255,0.06);
        margin-top: 1.5rem;
        padding-top: 1rem;
        text-align: center;
        color: #94a3b8;
    }

    @media (max-width: 600px) {
        .footer-inner {
            gap: 1rem;
        }
        .footer-logo {
            width: 100px;
        }
    }
</style>